{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "Zed Browser",
  "version": "0.1.0",
  "identifier": "com.zed.browser",
  "build": {
    "beforeDevCommand": "python -m http.server 3000 --directory public",
    "beforeBuildCommand": "",
    "frontendDist": "public"
  },
  "bundle": {
    "active": true,
    "targets": "all"
  },
  "app": {
    "windows": [
      {
        "title": "Zed Browser",
        "width": 1200,
        "height": 800,
        "minWidth": 800,
        "minHeight": 600,
        "resizable": true,
        "fullscreen": false
      }
    ]
  },
  "plugins": {
    "shell": {
      "open": true
    }
  }
}
